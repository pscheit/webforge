{
  "name": "webforge/webforge",
  "type": "library",
  "description": "a content management framework for easy to build and individual content management systems",
  "keywords": ["cmf", "framework", "cms"],
  "homepage": "http://github.com/pscheit/webforge",
  "license": "LGPL-3.0",
  "authors": [
    {"name": "Philipp Scheit", "email": "p.scheit@ps-webforge.com"}
  ],
  "require": {
    "php": ">=5.3.2",
    "ext-mbstring": "*",
    
    "symfony/console": "2.1.*@stable",
    "nikic/php-parser": "0.9.*",
    "doctrine/orm": "2.3.*@stable",
    
    "pscheit/psc-cms": "1.4.*@dev",
    "pscheit/psc-cms-boot": "2.*",
    "webforge/common": "1.3.*@dev",
    "webforge/config": "1.0.*",
    "sebastian/diff": "1.0.*"
  },
  "require-dev": {
    "webforge/testdata-repository": "dev-master",
    "phpmd/phpmd": "1.4.0",
    "webforge/testplate": "1.2.*@dev",
    "mikey179/vfsStream": "1.3.*@dev",
    "mockery/mockery": "dev-master"
  },
  "autoload": {
    "psr-0": {
      "Webforge": ["lib/", "tests/"]
    }
  },
  "bin": ["bin/webforge"],
  "minimum-stability": "dev",
  "extra": {
    "branch-alias": {
      "dev-master": "1.4.x-dev"
    }
  }
}